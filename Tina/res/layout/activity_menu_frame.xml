<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_menu_frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/loading_android"
    android:orientation="vertical" >

    <Button
        android:id="@+id/activity_menu_button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/up"
        android:text="@string/menu_frame_button1"
        android:textColor="@color/大红色"
        android:textStyle="bold" />

    <Button
        android:id="@+id/activity_menu_menu1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menuboder"
        android:text="@string/activity_menu_menu1"
        android:textColor="@color/金色" />

    <Button
        android:id="@+id/activity_menu_menu2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menuboder"
        android:text="@string/activity_menu_menu2"
        android:textColor="@color/金色" />

    <Button
        android:id="@+id/activity_menu_menu3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menuboder"
        android:text="@string/activity_menu_menu3"
        android:textColor="@color/金色" />

</LinearLayout>